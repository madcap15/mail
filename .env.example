# ============================================
# Mail Service Administration Panel
# Environment Configuration Example
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# FRONTEND CONFIGURATION
# ============================================
REACT_APP_API_URL=http://localhost:8000

# ============================================
# BACKEND CONFIGURATION
# ============================================
# JWT Secret (Generate a random string for production)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Admin Credentials (Change these immediately after first login)
ADMIN_USER=admin
ADMIN_PASSWORD=changeme

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_USER=sogo
DB_PASSWORD=change_this_password_in_production
DB_NAME=sogo
DB_HOST=sogo-postgresql
DB_PORT=5432

# ============================================
# MAILSERVER CONFIGURATION
# ============================================
# Mail domain (change to your actual domain)
SOGO_MAIL_DOMAIN=mail.example.com

# Postfix REST Server API Key (Generate a random key)
POSTFIX_REST_SERVER_API_KEY=change_this_api_key_in_production

# Initial admin user for mailserver
POSTFIX_REST_SERVER_INITIAL_USER=admin@sogo-postgresql
POSTFIX_REST_SERVER_INITIAL_PASSWORD=adminpass

# ============================================
# SOGO CONFIGURATION
# ============================================
# SOGo admin user
SOGO_ADMIN=admin
SOGO_PASSWORD=change_this_password_in_production

# ============================================
# DOCKER CONFIGURATION
# ============================================
COMPOSE_PROJECT_NAME=mail-service

# ============================================
# SECURITY NOTES
# ============================================
# - Always use strong, random passwords
# - Use different passwords for each service
# - Keep .env file secure and never commit to git
# - Rotate secrets regularly in production
# - Use environment variables for all sensitive data
